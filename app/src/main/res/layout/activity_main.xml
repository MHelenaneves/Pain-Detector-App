<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/solid_background">



    <TextView
        android:id="@+id/state"
        android:layout_width="134dp"
        android:layout_height="156dp"
        android:gravity="center"
        android:text="Please wait"
        android:textAlignment="center"
        android:textColor="@drawable/button_colour"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/circle_icon"
        app:layout_constraintEnd_toEndOf="@+id/circle_icon"
        app:layout_constraintStart_toStartOf="@+id/circle_icon"
        app:layout_constraintTop_toTopOf="@+id/circle_icon" />


    <TextView
        android:id="@+id/namenopain"
        android:layout_width="388dp"
        android:layout_height="61dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="Impedance Check"
        android:textAlignment="center"
        android:textColor="@drawable/button_colour"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circle_icon"
        android:layout_width="351dp"
        android:layout_height="315dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namenopain"
        app:layout_constraintVertical_bias="0.354"
        app:srcCompat="@drawable/ic_circle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="295dp"
        android:layout_height="98dp"
        android:layout_marginBottom="228dp"
        android:gravity="center"
        android:text="Adjust the headset"
        android:textAlignment="center"
        android:textColor="@drawable/textcolor2"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namenopain"
        app:layout_constraintVertical_bias="0.272" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="282dp"
        android:layout_height="87dp"
        android:layout_marginBottom="140dp"
        android:gravity="center"
        android:text="You will start seeing predictions soon"
        android:textAlignment="center"
        android:textColor="@drawable/textcolor2"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>