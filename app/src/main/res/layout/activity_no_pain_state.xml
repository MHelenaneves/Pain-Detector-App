<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/solid_background">

    <TextView
        android:id="@+id/currentstate"
        android:layout_width="236dp"
        android:layout_height="37dp"
        android:text="Current state"
        android:textAlignment="center"
        android:textColor="@drawable/text_colour"
        android:textSize="18dp"

        app:layout_constraintBottom_toTopOf="@+id/browseeegnopain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quadricircle_icon"
        app:layout_constraintVertical_bias="0.16" />

    <TextView
        android:id="@+id/state"
        android:layout_width="134dp"
        android:layout_height="156dp"
        android:gravity="center"
        android:text=" NO PAIN"
        android:textAlignment="center"
        android:textColor="@drawable/green_colour"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/circle_icon"
        app:layout_constraintEnd_toEndOf="@+id/circle_icon"
        app:layout_constraintStart_toStartOf="@+id/circle_icon"
        app:layout_constraintTop_toTopOf="@+id/circle_icon" />

    <TextView
        android:id="@+id/namenopain"
        android:layout_width="388dp"
        android:layout_height="61dp"
        android:layout_marginTop="96dp"
        android:text="Name Lastname"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@drawable/button_colour"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/browseeegnopain"
        android:layout_width="238dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="96dp"
        android:background="@drawable/round_button"
        android:onClick="onClick"
        android:text="Browse EEG signals"

        android:textAllCaps="false"

        android:textColor="@drawable/buttontext_colour"
        android:textSize="20dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.497"


        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/circle_icon"
        android:layout_width="351dp"
        android:layout_height="315dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toTopOf="@+id/browseeegnopain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namenopain"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_circle_green_animated" />

    <ImageView
        android:id="@+id/quadricircle_icon"
        android:layout_width="397dp"
        android:layout_height="227dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circle_icon"
        app:srcCompat="@drawable/ic_skewed_quadricircle" />

</androidx.constraintlayout.widget.ConstraintLayout>